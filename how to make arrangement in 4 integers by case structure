#include<bits/stdc++.h>                       //万能头文件
using namespace std;

int main()
{
    int a, b, c, d, t;
    printf("Please Enter 4 integers\n");
    cin >> a >> b >> c >> d;
    if (a < b)
    {
        t = a;
        a = b;
        b = t;
    }
    if (a < c)
    {
        t = a;
        a = c;
        c = t;
    }
    if (a < d)
    {
        t = a;
        a = d;
        d = t;
    }
    if (b < c)
    {
        t = b;
        b = c;
        c = t;
    }
    if (b < d)
    {
        t = b;
        b = d;
        d = t;
    }
    if (c < d)
    {
        t = c;
        c = d;
        d = t;
    }
    printf("按照从大到小的排列方式为：%d %d %d %d", a, b, c, d);
    return 0;
}
